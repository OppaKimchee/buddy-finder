
<% include partials/_header %>
<% include partials/_nav %>

<div class="container">
  <h3>SUBMIT:</h3>
  <form method="POST" action="/pets">
    <div class="row">
      <div class="col-xs-6">
        <label for="category">Category</label>
        <select class="form-control" name="category">
          <option>Lost</option>
          <option>Found</option>
        </select>
      </div>
      <div class="col-xs-6">
        <label for="type">Type</label>
        <select class="form-control" name="type">
          <option>Cat</option>
          <option>Dog</option>
        </select>
      </div>
    </div><br>
    <div class="row">
      <div class="col-xs-6">
        <label for="sex">Sex</label>
        <select class="form-control" name="sex">
          <option>Female</option>
          <option>Male</option>
          <option>N/A</option>
        </select>
      </div>
      <div class="col-xs-6">
        <label for="size">Size</label>
        <select class="form-control" name="size">
          <option>Small</option>
          <option>Medium</option>
          <option>Large</option>
          <option>N/A</option>
        </select>
      </div>
    </div><br>
    <div class="row">
      <div class="col-xs-6">
        <label for="name">Name</label>
        <input name="name" class="form-control" id="name" placeholder="Name of pet or N/A">
      </div>
      <div class="col-xs-6">
        <label for="breed">Breed</label>
        <input name="breed" class="form-control" id="breed" placeholder="Breed">
      </div>
    </div><br>
    <div class="row">
      <div class="col-xs-6">
        <label for="petColor">Color</label>
        <input name="color" class="form-control" id="petColor" placeholder="Color">
      </div>
      <div class="col-xs-6">
        <label for="age">Age</label>
        <input name="age" class="form-control" id="age" placeholder="Age">
      </div>
    </div><br>
    <div class="form-group">
      <label for="location">Location</label>
      <input name="location" class="form-control" id="location" placeholder="Location lost/found">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" name="description" rows="2"></textarea>
    </div>
   <!--  <div class="form-group">
       <label for="exampleInputEmail1">Email address</label>
       <input name="email" class="form-control" id="exampleInputEmail1" placeholder="Email to contact">
     </div> -->
   <div class="form-group">
      <label for="picture">Link to a picture</label>
      <input name="picture" class="form-control" id="picture" placeholder="Link to image (Imgur.com)">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>











