
<% include partials/_header %>
<% include partials/_nav %>

<div class="container">
  <h3>SUBMIT:</h3>
  <form method="POST" action="/pets">
    <div class="row">
      <div class="col-xs-6">
        <label for="category">Category</label>
        <select class="form-control" name="category">
          <option>Lost</option>
          <option>Found</option>
        </select>
      </div>
      <div class="col-xs-6">
        <label for="type">Type</label>
        <select class="form-control" name="type">
          <option>Cat</option>
          <option>Dog</option>
        </select>
      </div>
    </div><br>
    <div class="row">
      <div class="col-xs-6">
        <label for="sex">Sex</label>
        <select class="form-control" name="sex">
          <option>Female</option>
          <option>Male</option>
          <option>N/A</option>
        </select>
      </div>
      <div class="col-xs-6">
        <label for="size">Size</label>
        <select class="form-control" name="size">
          <option>Small</option>
          <option>Medium</option>
          <option>Large</option>
          <option>N/A</option>
        </select>
      </div>
    </div><br>
    <div class="row">
      <div class="col-xs-4">
        <label for="name">Name</label>
        <input name="name" class="form-control" id="name" placeholder="Name of pet or N/A">
      </div>
      <div class="col-xs-4">
        <label for="breed">Breed</label>
        <input name="breed" class="form-control" id="breed" placeholder="Breed">
      </div>
      <div class="col-xs-4">
        <label for="petColor">Color</label>
        <input name="color" class="form-control" id="petColor" placeholder="Color">
      </div>
    </div><br>
    <div class="row">
      <div class="col-xs-4">
        <label for="street">Street</label>
        <input name="street" class="form-control" id="street" placeholder="Street where lost/found (or N/A)">
      </div>
      <div class="col-xs-4">
        <label for="city">City</label>
        <input name="city" class="form-control" id="city" placeholder="City where lost/found (or N/A)">
      </div>
      <div class="col-xs-4">
        <label for="state">State</label>
        <input name="state" class="form-control" id="state" placeholder="State where lost/found (or N/A)">
      </div>
    </div><br>
    <div class="form-group">
     <label for="contact">Contact</label>
     <input name="contact" class="form-control" id="contact" placeholder="Contact information">
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input name="description" class="form-control" id="description" placeholder="Please provide short description">
    </div>
   <div class="form-group">
      <label for="picture">Link to a picture (required)</label>
      <input name="picture" class="form-control" id="picture" placeholder="Link to image (Imgur.com)">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>











<% include partials/_footer %>
